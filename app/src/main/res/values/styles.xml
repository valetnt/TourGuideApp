<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Activity -->
    <style name="ListItemTextView" parent="AppTheme">
        <item name="android:textColor">@color/colorCardText</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainTitle" parent="AppTheme">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Description" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Location Item -->
    <style name="LocationItemTextView_title" parent="AppTheme">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LocationItemTextView_details_bold" parent="AppTheme">
        <item name="android:textColor">@color/colorTextDarker</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:paddingTop">@dimen/location_item_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LocationItemTextView_details" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingRight">@dimen/location_item_padding</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="LocationItemFrame" parent="AppTheme">
        <item name="android:textColor">@color/colorCardText</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <!-- Tabs Layout -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorTabsBackground</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/tabIndicatorHeight</item>
        <item name="tabPaddingEnd">@dimen/tabPadding</item>
        <item name="tabPaddingStart">@dimen/tabPadding</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorTabsText</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <!-- Sightseeing Place Item -->
    <style name="SightseeingPlaceItemTextView_title" parent="AppTheme">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SightseeingPlaceItemTextView_details_bold" parent="AppTheme">
        <item name="android:textColor">@color/colorTextDarker</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:paddingTop">@dimen/sightseeing_place_item_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SightseeingPlaceItemTextView_details" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingRight">@dimen/sightseeing_place_item_padding</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

</resources>
